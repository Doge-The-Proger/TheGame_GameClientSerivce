<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OtusGameClientMVP.SettingsPage"
             Loaded="ContentPage_Loaded"
             Shell.NavBarIsVisible="False" NavigationPage.HasBackButton="False">
    <Grid x:Name="RootGrid" HorizontalOptions="FillAndExpand" VerticalOptions="Fill">
        <Image Source="background.jpg" Aspect="Fill" Grid.Column="0" Grid.Row="0" />
        <Label Text="Made by Команда игры© 2024" TextColor="White" FontSize="Medium" HorizontalOptions="Start" VerticalOptions="End"/>
        <VerticalStackLayout x:Name="SettingsStack" HorizontalOptions="Center" VerticalOptions="Center" Grid.Column="0" Grid.Row="0"
                 WidthRequest="600" HeightRequest="800" Spacing="30">
        <Label Text="Настройки" FontSize="Header" TextColor="White" HorizontalOptions="Center" />
        <Button x:Name="FullScreenToggle" HorizontalOptions="Center" Text="Полный экран вкл\выкл" TextColor="White"
                Clicked="FullScreenToggle_Clicked"/>
        <Button x:Name="BackBtn" HorizontalOptions="Center" Text="Назад" TextColor="White"
                Clicked="BackBtn_Clicked"/>
        <Button x:Name="ExitBtn" HorizontalOptions="Center" Text="Выход" TextColor="White"
                Clicked="ExitBtn_Clicked"/>
    </VerticalStackLayout>
    </Grid>
</ContentPage>